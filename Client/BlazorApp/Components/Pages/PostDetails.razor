@page "/posts/{id:int}"
@using ApiContracts.Posts
@using ApiContracts.Users
@using ApiContracts.Comments
@inject BlazorApp.Services.Interfaces.IPostService PostSvc
@inject BlazorApp.Services.Interfaces.IUserService UserSvc
@inject BlazorApp.Services.Interfaces.ICommentService CommentSvc
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Nav   // nav service

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (post is null)
{
    <div>Loading…</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-outline-secondary btn-sm" @onclick="GoBack">
            ← Back
        </button>
    </div>

    <div class="mb-4">
        <h3 class="mb-1">@post.Title</h3>
        <div class="text-muted mb-3">by @authorName</div>
        <div class="p-3 border rounded bg-light">
            @post.Body
        </div>
    </div>

    <div class="mb-3">
        <h5>Comments (@(comments?.Count ?? 0))</h5>
        @if (comments is null || comments.Count == 0)
        {
            <div class="text-muted">No comments yet.</div>
        }
        else
        {
            foreach (var c in comments)
            {
                <div class="border rounded p-2 mb-2">
                    <div class="small text-muted">by @NameFor(c.AuthorUserId)</div>
                    <div>@c.Body</div>
                </div>
            }
        }
    </div>

    <div class="card">
        <div class="card-body">
            <h6 class="mb-2">Add a comment</h6>

            @* login info *@
            @if (currentUserId <= 0)
            {
                <div class="alert alert-info py-2 mb-2 small">
                    Please log in to your account to post a comment.
                </div>
            }

            <div class="mb-2">
                <input class="form-control"
                       value="@(currentUserId > 0 ? $"{currentUserName} ({currentUserId})" : "Not logged in")"
                       disabled />
            </div>
            <textarea class="form-control mb-2" rows="3" placeholder="Write a comment…"
                      @bind="newComment"></textarea>

            <button class="btn btn-primary"
                    @onclick="AddComment"
                    disabled="@(currentUserId <= 0 || string.IsNullOrWhiteSpace(newComment))">
                Post comment
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public int id { get; set; }

    private PostDto? post;
    private string? authorName;
    private List<CommentDto>? comments;
    private List<UserDto> users = new();
    private string newComment = "";
    private string? error;

    // ADDED
    private int currentUserId;
    private string currentUserName = "Unknown";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // load auth state
            var auth = await AuthProvider.GetAuthenticationStateAsync();
            currentUserId = int.TryParse(auth.User.FindFirst("Id")?.Value, out var idc) ? idc : 0;
            currentUserName = auth.User.Identity?.Name ?? "Unknown";

            // load post data
            post = await PostSvc.GetPostByIdAsync(id);
            users = await UserSvc.GetAllUsersAsync();
            authorName = users.FirstOrDefault(u => u.Id == post!.AuthorUserId)?.UserName ?? "Unknown";

            comments = await CommentSvc.GetCommentsByPostIdAsync(id);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task AddComment() // create comment
    {
        error = null;

        if (currentUserId <= 0)
        {
            error = "Please log in to your account to add a comment.";
            return;
        }

        if (string.IsNullOrWhiteSpace(newComment)) return;

        try
        {
            await CommentSvc.CreateCommentAsync(id, new CreateCommentDto
            {
                PostId = id,
                AuthorUserId = currentUserId,   // ADDED
                Body = newComment
            });

            newComment = "";
            comments = await CommentSvc.GetCommentsByPostIdAsync(id);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private string NameFor(int userId) => // author lookup
        users.FirstOrDefault(u => u.Id == userId)?.UserName ?? "Unknown";

    private void GoBack() => Nav.NavigateTo("/posts"); // back to posts
}
