@page "/posts/{id:int}"
@using ApiContracts.Posts
@using ApiContracts.Users
@using ApiContracts.Comments
@inject BlazorApp.Services.Interfaces.IPostService PostSvc
@inject BlazorApp.Services.Interfaces.IUserService UserSvc
@inject BlazorApp.Services.Interfaces.ICommentService CommentSvc

@code {
    [Parameter] public int id { get; set; }

    private PostDto? post;
    private string? authorName;
    private List<CommentDto>? comments;
    private List<UserDto> users = new();
    private int selectedUserId; // choose a registered user to comment as
    private string newComment = "";
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // post + author name
            post = await PostSvc.GetPostByIdAsync(id);
            users = await UserSvc.GetAllUsersAsync();
            authorName = users.FirstOrDefault(u => u.Id == post!.AuthorUserId)?.UserName ?? "Unknown";

            // initial selected user (first in list if any)
            selectedUserId = users.FirstOrDefault()?.Id ?? 0;

            // comments (we'll enrich with author names below in UI)
            comments = await CommentSvc.GetCommentsByPostIdAsync(id);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task AddComment()
    {
        error = null;
        if (selectedUserId <= 0 || string.IsNullOrWhiteSpace(newComment)) return;

        try
        {
            await CommentSvc.CreateCommentAsync(id, new CreateCommentDto
            {
                PostId = id,               // server uses route; this is fine
                AuthorUserId = selectedUserId,
                Body = newComment
            });

            newComment = "";
            // reload comments
            comments = await CommentSvc.GetCommentsByPostIdAsync(id);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private string NameFor(int userId) =>
        users.FirstOrDefault(u => u.Id == userId)?.UserName ?? "Unknown";
}

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (post is null)
{
    <div>Loading…</div>
}
else
{
    <div class="mb-4">
        <h3 class="mb-1">@post.Title</h3>
        <div class="text-muted mb-3">by @authorName</div>
        <div class="p-3 border rounded bg-light">
            @post.Body
        </div>
    </div>

    <div class="mb-3">
        <h5>Comments (@(comments?.Count ?? 0))</h5>
        @if (comments is null || comments.Count == 0)
        {
            <div class="text-muted">No comments yet.</div>
        }
        else
        {
            foreach (var c in comments)
            {
                <div class="border rounded p-2 mb-2">
                    <div class="small text-muted">by @NameFor(c.AuthorUserId)</div>
                    <div>@c.Body</div>
                </div>
            }
        }
    </div>

    <div class="card">
        <div class="card-body">
            <h6 class="mb-3">Add a comment</h6>

            <div class="row g-2 align-items-center mb-2">
                <div class="col-auto">
                    <label class="col-form-label">User</label>
                </div>
                <div class="col-auto">
                    <select class="form-select" style="min-width: 220px"
                            @bind="selectedUserId">
                        @foreach (var u in users)
                        {
                            <option value="@u.Id">@u.UserName</option>
                        }
                    </select>
                </div>
            </div>

            <textarea class="form-control mb-2" rows="3" placeholder="Write a comment…"
                      @bind="newComment"></textarea>

            <button class="btn btn-primary" @onclick="AddComment" disabled="@string.IsNullOrWhiteSpace(newComment)">
                Post comment
            </button>
        </div>
    </div>
}
